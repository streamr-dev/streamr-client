{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "commonjs"
    },
    "globals": {
        "ts-jest": {}
    },
    "include": [
        "src/**/*",
        "vendor/**/*",
        "contracts/**/*"
    ]
}
